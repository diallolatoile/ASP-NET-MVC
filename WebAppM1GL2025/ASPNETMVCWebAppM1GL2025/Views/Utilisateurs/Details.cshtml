@model ASPNETMVCWebAppM1GL2025.Models.Utilisateur
@using ASPNETMVCWebAppM1GL2025.Models

@{
    ViewBag.Title = "Détails de l'Utilisateur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcumb {
    <div class="pagetitle">
        <h1>Détails de l'Utilisateur</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Accueil</a></li>
                <li class="breadcrumb-item">Utilisateurs</li>
                <li class="breadcrumb-item active">Détails</li>
            </ol>
        </nav>
    </div><!-- Fin du titre de page -->
}

<section class="section profile">
    <div class="row">
        <div class="col-xl-4">
            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <img src="assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                    <h2>@Html.DisplayFor(model => model.NomPrenom)</h2>
                    <h3>@Html.DisplayFor(model => model.Email)</h3>
                </div>
            </div>
        </div>

        <div class="col-xl-8">
            <div class="card">
                <div class="card-body pt-3">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Détails</button>
                        </li>
                    </ul>
                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            <h5 class="card-title">Détails de l'Utilisateur</h5>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Nom et Prénom</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.NomPrenom)</div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Téléphone</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Telephone)</div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Email</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Email)</div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Adresse</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Adresse)</div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Type d'Utilisateur</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.UtilisateurType)</div>
                            </div>

                            <!-- Champs spécifiques pour Admin -->
                            @if (Model.UtilisateurType == UtilisateurType.Admin)
                            {
                                var adminModel = (Admin)Model;
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Matricule</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => adminModel.Matricule)</div>
                                </div>
                            }

                            <!-- Champs spécifiques pour Client -->
                            @if (Model.UtilisateurType == UtilisateurType.Client)
                            {
                                var clientModel = (Client)Model;
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Numéro Client</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => clientModel.CNI)</div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Date de Naissance</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => clientModel.DateNaissance)</div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Genre</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => clientModel.Genre)</div>
                                </div>
                            }

                            <!-- Champs spécifiques pour Manager -->
                            @if (Model.UtilisateurType == UtilisateurType.Manager)
                            {
                                var managerModel = (Manager)Model;
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">NINEA</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => managerModel.NINEA)</div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">RCCM</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => managerModel.RCCM)</div>
                                </div>
                            }

                            <div class="text-center mt-3">
                                @Html.ActionLink("Éditer", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("Retour à la Liste", "Index", null, new { @class = "btn btn-danger ml-2" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
