@model IEnumerable <ASPNETMVCWebAppM1GL2025.Models.Utilisateur>


@{
    ViewBag.Title = "Index des Utilisateurs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcumb {
    <div class="pagetitle">
        <h1>Index des Utilisateurs</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Accueil</a></li>
                <li class="breadcrumb-item">Utilisateurs</li>
                <li class="breadcrumb-item active">Index</li>
            </ol>
        </nav>
    </div><!-- Fin du titre de page -->
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <!-- Titre et bouton de création -->
                    <h5 class="card-title">Liste des Utilisateurs</h5>

                    <!-- Boutons pour créer un Admin, Client ou Manager -->
                    <div class="d-flex justify-content-end">
                        <p>
                            @Html.ActionLink("Créer un Admin", "CreateAdmin", null, new { @class = "btn btn-success me-2" })
                            @Html.ActionLink("Créer un Client", "CreateClient", null, new { @class = "btn btn-primary me-2" })
                            @Html.ActionLink("Créer un Manager", "CreateManager", null, new { @class = "btn btn-warning" })
                        </p>
                    </div>


                    <!-- Tableau avec lignes alternées -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.NomPrenom)</th>
                                <th>@Html.DisplayNameFor(model => model.Telephone)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.Adresse)</th>
                                <th>@Html.DisplayNameFor(model => model.UtilisateurType)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.NomPrenom)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Telephone)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Adresse)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UtilisateurType)</td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Éditer"><i class="bi bi-pencil"></i></a>
                                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-secondary btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Détails"><i class="bi bi-info-circle"></i></a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Supprimer"><i class="bi bi-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- Fin du tableau avec lignes alternées -->

                </div>
            </div>

        </div>
    </div>
</section>
