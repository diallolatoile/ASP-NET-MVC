@model ASPNETMVCWebAppM1GL2025.Models.Annonce

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcumb {
    <div class="pagetitle">
        <h1>Editer une Annonce</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Accueil</a></li>
                <li class="breadcrumb-item">Annonces</li>
                <li class="breadcrumb-item active">Editer</li>
            </ol>
        </nav>
    </div><!-- Fin du titre de page -->
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Formulaire d'Édition d'Annonce</h5>

                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "row g-3 needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.AnnonceId)

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.DateDebutAnnonce, new { @class = "form-label" })
                            @Html.EditorFor(model => model.DateDebutAnnonce, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "required" } })
                            <div class="invalid-feedback">Veuillez fournir une date de début valide.</div>
                            <div class="valid-feedback">C'est bon!</div>
                            @Html.ValidationMessageFor(model => model.DateDebutAnnonce, "", new { @class = "invalid-feedback" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.DateFinAnnonce, new { @class = "form-label" })
                            @Html.EditorFor(model => model.DateFinAnnonce, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "required" } })
                            <div class="invalid-feedback">Veuillez fournir une date de fin valide.</div>
                            <div class="valid-feedback">C'est bon!</div>
                            @Html.ValidationMessageFor(model => model.DateFinAnnonce, "", new { @class = "invalid-feedback" })
                        </div>

                        <div class="col-md-12">
                            @Html.LabelFor(model => model.DescriptionAnnonce, new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.DescriptionAnnonce, new { htmlAttributes = new { @class = "tinymce-editor form-control", @required = "required" } })
                            <div class="invalid-feedback">Veuillez fournir une description.</div>
                            <div class="valid-feedback">C'est bon!</div>
                            @Html.ValidationMessageFor(model => model.DescriptionAnnonce, "", new { @class = "invalid-feedback" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.StatutAnnonce, new { @class = "form-label" })
                            <div class="form-check form-switch">
                                @Html.EditorFor(model => model.StatutAnnonce, new { htmlAttributes = new { @class = "form-check-input" } })
                                <div class="invalid-feedback">
                                    Veuillez indiquer si l'annonce est active.
                                </div>
                                <div class="valid-feedback">
                                    C'est bon!
                                </div>
                                @Html.ValidationMessageFor(model => model.StatutAnnonce, "", new { @class = "invalid-feedback" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(model => model.BienId, "BienId", new { @class = "form-label" })
                            @Html.DropDownList("BienId", null, new { htmlAttributes = new { @class = "form-select", @required = "required" } })
                            <div class="invalid-feedback">Veuillez sélectionner un bien.</div>
                            <div class="valid-feedback">C'est bon!</div>
                            @Html.ValidationMessageFor(model => model.BienId, "", new { @class = "invalid-feedback" })
                        </div>

                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <button type="reset" class="btn btn-secondary">Réinitialiser</button>
                        </div>
                    }

                    <div class="mt-3">
                        @Html.ActionLink("Retour à la Liste", "Index", null, new { @class = "btn btn-danger" })
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

